<div class="well" style="padding: 8px 0;">
  <ul class="nav nav-list">

    <li class="nav-header"><%= sidebar_title %></li>

    <% actions.each do |action| %>
      <% klass = action[:url][:action].eql?(params[:action]) ? "active" : "inactive" %>
      <li class="<%= klass %>">
        <%= link_to action[:url] do %>
          <i class="icon-<%= action[:icon] %>"></i>
          <%= action[:message] %>
        <% end %>
      </li>
    <% end %>

    <li class="divider"></li>

    <% extra_actions.each do |action| %>
      <li>
        <%= link_to action[:url], action[:link_to_options] do %>
          <i class="icon-<%= action[:icon] %>"></i>
          <%= action[:message] %>
        <% end %>
      </li>
    <% end %>

  </ul>
</div>

